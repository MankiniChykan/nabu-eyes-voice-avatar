{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "parser": "./tools/eslint-typescript-parser.mjs",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  },
  "plugins": ["lit"],
  "extends": [
    "eslint:recommended",
    "plugin:lit/recommended",
    "plugin:prettier/recommended"
  ],
  "ignorePatterns": ["dist/", "node_modules/"]
}
